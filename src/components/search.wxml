<view class="dx-search class" catch:tap="on_catch" catch:longpress="on_catch">
	<view class="enter">
		<dx-icon
			class="icon"
			size="calc(var(--label) * 0.7)"
			src="{{ icon }}"
			wx:if="{{ icon }}"
		/>

		<input
			hold-keyboard
			type="text"
			class="input"
			confirm-type="search"
			placeholder-style="color: #ccc;"
			focus="{{ focus }}"
			cursor-spacing="{{ 150 }}"
			placeholder="{{ placeholder }}"
			bind:confirm="on_value_confirm"
		/>
	</view>

	<view
		class="handle"
		data-index="{{ index }}"
		wx:key="*this"
		wx:for="{{ handle }}"
		catch:tap="on_active_tap"
		catch:longpress="on_active_longpress"
	>
		<dx-icon size="calc(var(--label) * 0.7)" src="{{ item }}" />
	</view>
</view>
