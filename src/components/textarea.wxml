<textarea
	auto-height
	hold-keyboard
	confirm-type="done"
	class="dx-textarea class"
	value="{{ value }}"
	style="{{ style }}"
	maxlength="{{ -1 }}"
	disabled="{{ readonly }}"
	cursor-spacing="{{ 150 }}"
	placeholder="{{ placeholder }}"
	placeholder-style="{{ { color: '#C0C4CC', fontSize: 16 } }}"
	bind:focus="on_focus"
	bind:blur="on_blur"
	bind:input="on_input"
	bind:confirm="on_confirm"
/>
