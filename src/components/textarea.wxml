<view class="dx-textarea class" wx:if="{{ readonly }}">
	<text wx:if="{{ value }}">{{ value }}</text>

	<dx-indicator class="icon" icon="{{ icon }}" wx:if="{{ icon }}" />
</view>

<view class="dx-textarea class" wx:elif="{{ focus }}">
	<textarea
		focus
		auto-height
		hold-keyboard
		confirm-type="done"
		value="{{ value }}"
		maxlength="{{ -1 }}"
		cursor-spacing="{{ 150 }}"
		bind:blur="on_blur"
		bind:input="on_input"
		bind:confirm="on_confirm"
	/>
</view>

<view class="dx-textarea class" bind:tap="on_focus" wx:else>
	<text wx:if="{{ value }}">{{ value }}</text>
	<text class="placeholder" wx:else>{{ placeholder }}</text>

	<dx-indicator class="icon" icon="{{ icon }}" wx:if="{{ icon }}" />
</view>
