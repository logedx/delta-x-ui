<view
	class="dx-datetime class"
	style="{{ style }}"
	bind:longpress="on_copy"
	wx:if="{{ readonly }}"
>
	<text wx:if="{{ date }}">{{ date }}</text>
	<text wx:if="{{ time }}">{{ time }}</text>

	<dx-indicator
		class="icon"
		icon="{{ potest_readonly( readonly) }}"
		catch:tap="on_copy"
		wx:if="{{ readonly }}"
	/>
</view>

<view
	class="dx-datetime class"
	style="{{ style }}"
	bind:longpress="on_copy"
	wx:else
>
	<picker
		mode="date"
		class="date"
		:value="{{ date }}"
		bind:change="on_update_date"
		wx:if="{{ is_date(mode) }}"
	>
		<text wx:if="{{ date }}">{{ date }}</text>
		<text class="placeholder" wx:else>{{ placeholder }}</text>
	</picker>

	<picker
		mode="time"
		class="time"
		:value="{{ time }}"
		bind:change="on_update_time"
		wx:if="{{ is_time(mode, date) }}"
	>
		<text wx:if="{{ time }}">{{ time }}</text>
		<text class="placeholder" wx:else>{{ placeholder }}</text>
	</picker>

	<dx-indicator
		class="icon"
		icon="{{ potest_clearable(clearable) }}"
		catch:tap="on_clear"
		wx:if="{{ clearable && is_clearable(date, time, type) }}"
	/>

	<dx-indicator class="icon" icon="{{ icon }}" wx:else />
</view>
