<view class="dx-number class" style="{{ style }}">
	<text bind:tap="on_switch_negative" wx:if="{{ min < 0 }}">âˆ’</text>

	<input
		hold-keyboard
		value="{{ input }}"
		focus="{{ focus }}"
		cursor-spacing="{{ 150 }}"
		placeholder="{{ placeholder }}"
		type="{{ digit > 0 ? 'digit' : 'number' }}"
		bind:keyboardheightchange="on_keyboard_height_change"
		bind:focus="on_focus"
		bind:blur="on_blur"
	/>
</view>
