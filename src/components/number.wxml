<input
	hold-keyboard
	confirm-type="done"
	class="dx-number class"
	placeholder-style="color: #C0C4CC; font-size: 32rpx;"
	value="{{ input }}"
	focus="{{ focus }}"
	style="{{ style }}"
	disabled="{{ readonly }}"
	cursor-spacing="{{ 150 }}"
	placeholder="{{ placeholder }}"
	type="{{ digit > 0 ? 'digit' : 'number' }}"
	bind:focus="on_focus"
	bind:blur="on_blur"
	bind:input="on_input"
	bind:confirm="on_confirm"
/>
