<dx-layout back="/example/icon/chevron-left.svg">
	<dx-nameplate class="nameplate" label="Color">
		<dx-icon
			slot="icon"
			size="var(--u-04-xs)"
			src="/example/icon/palette.svg"
		/>

		<dx-label serif name="main">
			<text class="color" />
		</dx-label>

		<dx-label serif name="main:slot">
			<text class="color slot" />
		</dx-label>
	</dx-nameplate>

	<dx-nameplate class="nameplate" label="Behavior">
		<dx-icon
			slot="icon"
			size="var(--u-04-xs)"
			src="/example/icon/activity.svg"
		/>

		<dx-label name="scroll">
			<!--  -->
		</dx-label>
	</dx-nameplate>

	<author slot="footer" />
</dx-layout>
