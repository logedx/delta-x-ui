<dx-layout contrast>
	<dx-header
		background="var(--blue)"
		home="/example/icon/home.svg"
		back="/example/icon/chevron-left.svg"
	>
		<view class="color slot" />
	</dx-header>

	<dx-nameplate class="nameplate" label="Color">
		<dx-icon
			slot="icon"
			size="var(--u-04-xs)"
			src="/example/icon/palette.svg"
		/>

		<dx-label serif name="header">
			<text class="color" />
		</dx-label>

		<dx-label serif name="header:slot">
			<text class="color slot" />
		</dx-label>
	</dx-nameplate>

	<dx-nameplate class="nameplate" label="Navigator">
		<dx-icon
			slot="icon"
			size="var(--u-04-xs)"
			src="/example/icon/activity.svg"
		/>

		<dx-label serif name="back">
			<dx-icon
				size="var(--u-04-xs)"
				src="/example/icon/chevron-left.svg"
			/>
		</dx-label>

		<dx-label name="home">
			<dx-icon size="var(--u-04-xs)" src="/example/icon/home.svg" />
		</dx-label>
	</dx-nameplate>

	<author slot="footer" />
</dx-layout>
