<dx-layout solid footer class="main" back="/example/icon/chevron-left.svg">
	<text slot="header" class="title header">layout</text>

	<dx-nameplate class="nameplate" label="Slot">
		<dx-icon
			slot="icon"
			size="var(--u-04-xs)"
			src="/example/icon/palette.svg"
		/>

		<dx-label divider title="header">
			<text class="color header" />
		</dx-label>

		<dx-label divider title="main">
			<text class="color main" />
		</dx-label>

		<dx-label title="footer">
			<text class="color footer" />
		</dx-label>

		<dx-label title="background">
			<text class="color background" />
		</dx-label>
	</dx-nameplate>

	<author slot="footer" class="author footer" />

	<view slot="background" class="background" />
</dx-layout>
