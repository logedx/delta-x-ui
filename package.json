{
	"name": "delta-x-ui",
	"version": "1.1.0",
	"license": "MIT",
	"author": "leiddx <leiddx@hotmail.com>",
	"description": "",
	"type": "module",
	"miniprogram": "dist",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./components/*": "./dist/components/*",
		"./hub/*": "./dist/hub/*",
		"./lib/*": "./dist/lib/*",
		"./model/*": "./dist/model/*",
		"./storage/*": "./dist/storage/*",
		"./eslint.config.js": "./eslint.config.js"
	},
	"scripts": {
		"prepare": "npx husky",
		"install": "npm run build",
		"eslint": "npx tsc --noEmit && npx eslint **/*.ts --ignore-pattern dist --ignore-pattern miniprogram_npm",
		"build": "npx gulp & npx tsc -p ./src",
		"release": "npx commit-and-tag-version --releaseCommitMessageFormat \"🐳 chore(release): {{currentTag}}\""
	},
	"homepage": "https://github.com/logedx/delta-x-ui#readme",
	"bugs": {
		"url": "https://github.com/logedx/delta-x-ui/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/logedx/delta-x-ui.git"
	},
	"directories": {
		"doc": "doc",
		"test": "test"
	},
	"engines": {
		"node": ">= 22.0.0",
		"npm": ">= 10.0.0"
	},
	"dependencies": {
		"@types/base-64": "^1.0.2",
		"@types/url-parse": "^1.4.11",
		"@types/wechat-miniprogram": "^3.4.8",
		"base-64": "^1.0.0",
		"moment": "^2.30.1",
		"query-string": "7.1.3",
		"url-parse": "^1.5.10"
	},
	"devDependencies": {
		"@eslint/js": "^9.27.0",
		"@stylistic/eslint-plugin": "^4.4.0",
		"@types/del": "^4.0.3",
		"@types/eslint__js": "^9.14.0",
		"@types/gulp": "^4.0.17",
		"@types/gulp-less": "^0.0.36",
		"@types/gulp-rename": "^2.0.6",
		"commit-and-tag-version": "^12.5.1",
		"del": "^8.0.0",
		"eslint": "^9.27.0",
		"gulp": "^5.0.0",
		"gulp-clean": "^0.4.0",
		"gulp-less": "^5.0.0",
		"gulp-rename": "^2.0.0",
		"husky": "^9.1.7",
		"less": "^4.3.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0"
	},
	"commit-and-tag-version": {
		"parserOpts": {
			"headerPattern": "(\\w*)(?:\\(([\\w\\$\\.\\-\\* ]*)\\))?: (.*)$"
		}
	}
}
