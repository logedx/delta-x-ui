{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"paths": {
			"/*": [
				"./*"
			]
		},
		"pretty": true,
		"resolveJsonModule": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"types": [
			"node",
			"wechat-miniprogram"
		]
	},
	"exclude": [
		".vscode",
		"dist",
		"node_modules"
	],
	"ts-node": {
		"files": true,
		"transpileOnly": true
	}
}